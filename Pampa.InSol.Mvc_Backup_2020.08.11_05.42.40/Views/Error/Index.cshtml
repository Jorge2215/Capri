@model System.Exception
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <div>
        @if (Model.IsNotNull())
        {
            <hr />
            @Model.Message
            <hr />
            @Model.ToString();
            }
    </div>
</body>
</html>
